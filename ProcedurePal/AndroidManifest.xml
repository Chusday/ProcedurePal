<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myfirstapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myfirstapp.QuizActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.example.myfirstapp.MainActiviy" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActiviy" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.DisplayMessageActivity"
            android:label="@string/title_activity_multiple_choice" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.DragAndDropActivity"
            android:label="@string/title_activity_drag_and_drop" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.Instructions"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.DragActivity"
            android:label="@string/title_activity_drag" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.DataActivity"
            android:label="@string/title_activity_data" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.QuizChoice"
            android:label="@string/title_activity_quiz_choice" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
    </application>

</manifest>
