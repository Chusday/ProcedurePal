<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:columnWidth="300dp"
    android:orientation="vertical"
    android:rowCount="3"
    android:stretchMode="columnWidth" >

    <LinearLayout
        android:id="@+id/topright"
        android:orientation="vertical"
        android:layout_width="160dp"
        android:layout_height="166dp"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@drawable/number_2" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomright"
        android:orientation="vertical"
        android:layout_width="160dp"
        android:layout_height="166dp"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@drawable/number_4" >

    </LinearLayout>
    



    <LinearLayout
        android:id="@+id/bottomleft"
        android:layout_width="160dp"
        android:layout_height="166dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@drawable/number_3"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bank"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_vertical"
        android:layout_row="2"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/myimage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@raw/laundry_2" 
            />

        <ImageView
            android:id="@+id/myimage4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@raw/laundry_4" />

        <ImageView
            android:id="@+id/myimage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@raw/laundry_3" />
		</LinearLayout>
    
  

    <LinearLayout
        android:id="@+id/topleft"
        android:layout_width="160dp"
        android:layout_height="166dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:background="@drawable/number_1"
        android:orientation="vertical" >
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/bank2"
        android:layout_width="160dp"
        android:layout_height="166dp"
        android:layout_column="1"
        android:layout_row="2"
        android:background="#ffffff"
        android:orientation="vertical" >

            <ImageView
                android:id="@+id/myimage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@raw/laundry_1" />
        
     		 <Button
     		     android:id="@+id/button2"
     		     android:layout_width="match_parent"
     		     android:layout_height="wrap_content"
     		     android:onClick="reset"
     		     android:text="Reset" />

     		 <Button
     		     android:id="@+id/button1"
     		     android:layout_width="match_parent"
     		     android:layout_height="wrap_content"
     		     android:onClick="dragAnswer"
     		     android:text="Submit" />
            
   	 </LinearLayout>
    
    
  
</GridLayout>